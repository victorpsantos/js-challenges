# EditorConfig is a simple file format that helps developers
# maintain consistent coding styles between different editors
# and IDEs. For more information, visit http://editorconfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines
[*]
end_of_line = lf
insert_final_newline = true

# JavaScript files
[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = true

# ESLint and Prettier configuration
[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Enable Prettier integration with ESLint
[*.js]
eslint_enable_prettier = true